#!/bin/bash
set -euo pipefail
# Also enable GDM autologin on the Live ISO like
# the existing coreos-liveiso-autologin-generator and
# disable initial setup.
runuser -u core -- /bin/sh -c 'mkdir -p ~/.config && touch ~/.config/gnome-initial-setup-done'
cat >> /etc/gdm/custom.conf << EOF
# Generated by $0
[daemon]
AutomaticLoginEnable=True
AutomaticLogin=core
EOF
